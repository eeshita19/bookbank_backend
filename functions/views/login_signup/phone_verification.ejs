    <link rel="stylesheet" type="text/css" href="/css/verification_styling.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
</head>
<img src="/images/Polygon%201.png" id="polygon">
<img src="/images/Path%201.png" id="path">

<body>
    <div id="container">
        <img src="/images/Intersection%201.png" id="intersectionpolygon">
        <h1 id="verificationprocess">Verification Process</h1>
        <p id="detailstoverify">Enter your mobile number to verify detail

            <div class="selectbox">
                <div class="options-container">
                    <div class="options">
                        <label for="india">India</label>
                        <input type="radio" class="radio" id="india" name="country">

                    </div>
                    <div class="options">
                        <label for="Bangladesh">Bangladesh</label>
                        <input type="radio" class="radio" id="Bangladesh" name="country">


                    </div>
                    <div class="options">
                        <label for="Bhutan">Bhutan</label>
                        <input type="radio" class="radio" id="Bhutan" name="Bhutan">
                    </div>
                    <div class="options">
                        <label for="UK">UK</label>
                        <input type="radio" class="radio" id="UK" name="UK">
                    </div>
                    <div class="options">
                        <label for="England">England</label>
                        <input type="radio" class="radio" id="England" name="England">
                    </div>

                </div>

            </div>
            <div class="selected">
                <img src="/images/Polygon%203.png" id="downarrow">
                <img src="/images/Polygon%204.png" id="uparrow">
